.empty_tip{
  position: fixed;
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction:column;
  align-items:center;
  justify-content: center;
}
.cart_title{
  height:60px;
  background-color: #f5f5f5;
  font-size:14px;
  padding-top:20px;
}
.cart_item{
  display: flex;
  flex-direction:row;
  margin:0;
  height:200rpx;
}
.cart_item_selected{
  order:0;
  margin:5px 20px;
  display: flex;
  align-items: center;
}
.cart_item_selected>image{
  width:20px;
  height: 20px;
}
.cart_item_image{
  margin:5px;
  order:1;
  display:flex;
  align-items:center;
}
.cart_item_image>image{
  width:200rpx;
  height:150rpx;
}
.cart_item_detail{
  order:2;
  width:100%;
  margin-top:10px;
  margin-right:5px;
}
.cart_item_handle{
  position:relative;
  bottom:0;
  right:0;
}
.cart_item_handle>view{
  float:right;
}
.cart_item_handle image{
  width:25px;
  height: 25px;
}

.cart_item_number{
  width:20px;
  line-height: 20px;
  margin:0 10px;
  vertical-align: 4px;
}

.cart_bottom{
  position:fixed;
  bottom:0;
  width:100%;
  display: flex;
  flex-direction:row;
  background-color:#f5f5f5
}
.cart_bottom_selected{
  order:0;
  margin:5px 20px;
  display: flex;
  align-items: center;
}
.cart_bottom_ccount{
  order:1;
  flex-grow: 1;
}
.cart_bottom_ccount>text{
  height:100%;
  display: flex;
  align-items: center;
}
.cart_bottom_operation{
  order:1;
}
.cart_bottom_operation>button{
  width:100px;
  margin:5px;
}